<%# ヘッダー部分 %>
<div class="header-content">
  <div class="header-left">
  </div>
  <div class="header-center">
    <h1>
      <div class="food-linker">
        <%= link_to "FOOD LINKER", "/", class: "food-linker-logo" %>
      </div>
    </h1>
